<section class="bg-light py-5">
    <!-- products by category -->
    <div class="container row py-5 mx-auto border-product">
        <div class="col-12 col-md-3 mx-auto mb-3 ">
            <!-- img src="/images/product-{{product.id}}.jpg" -->
            <img src="/images/product.jpg" class="img-fluid rounded" alt="coffee image">
        </div>
        <div class="col-12 col-md-4 mx-auto">
            <h2 class="pb-2 border-bottom">{{product.name}}</h2>
            <p>{{product.brand.name}}</p>
            <p>{{product.price}}</p>
            <div class="d-grid">
                <a href="/cart" class="btn rounded-pill btn-danger" type="button">
                    <i class="bi bi-cart-plus fs-4"></i>
                </a>
            </div>
        </div>
    </div>
</section>

<!-- carousel -->
<section class="container my-5">
    <div>
        <h1 class="h5 mb-3 text-center">Similar Products</h1>
    </div>
    <div id="carouselControls" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <div class="row">
                    {{#each product}}

                    <div class="col-3">
                        <div class="card" style="width: 18rem;">
                            <img src="/images/product.jpg" class="card-img-top" alt="coffee image">
                            <div class="card-body">
                                <h5 class="card-title">{{product.name}}</h5>
                                <p class="card-text">{{product.brand.name}}</p>
                                <p class="card-text">{{product.price}}</p>
                                <div class="d-grid">
                                    <a href="/cart" class="btn rounded-pill btn-danger" type="button">
                                        <i class="bi bi-cart-plus fs-4"></i>
                                    </a>
                                </div>
                            </div>
                        </div>

                    </div>





                    {{/each}}
                </div>
            </div>
            <div class="carousel-item">
                <img src="/images/category-2.jpg" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="/images/category-3.jpg" class="d-block w-100" alt="...">
            </div>

        </div>


    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselControls" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselControls" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
    </div>
</section>