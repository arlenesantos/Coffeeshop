<section class="container">
    <!-- cart menu -->
    <div class="p-3 mb-5">
        <ul class="nav justify-content-center">
            <li class="nav-item menu-cart">
                <a class="nav-link text-secondary" href="/cart">Shopping cart</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-secondary" href="/cart/shipping">Shipping details</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-secondary" href="/cart/payment">Payment options</a>
            </li>
        </ul>
    </div>

    <div class="row">
        <!-- cart products -->
        <div class="col-md-7 col-lg-8 mb-5">
            <h1 class="h3 mb-3">Shopping cart</h1>
            <hr>
            <div class="mt-3">
                {{#each products}}
                <div class="card mb-4 card-cart" style="max-width: 540px;">
                    <div class="row g-0">
                        <div class="d-md-none col-md-4 text-center">
                            <a href="/products/product?id={{this.id}}" class="text-decoration-none link-secondary">
                                <img src="/images/product.jpg" class="img-fluid w-50" alt="product image"></a>
                        </div>
                        <div class="d-none d-md-block col-md-4">
                            <a href="/products/product?id={{this.id}}" class="text-decoration-none link-secondary">
                                <img src="/images/product.jpg" class="img-fluid" alt="product image"></a>
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <p class="card-title fw-bold"> <a href="/products/product?id={{this.id}}"
                                        class="text-decoration-none link-dark"> {{this.name}}</a></p>
                                <p class="card-title"> Product brand</p>
                                <p class="card-text">{{this.price}}</p>
                                <i class="bi bi-cart-dash btn btn-secondary px-3 fs-5"></i>
                                <span class="px-3 fw-bold">1</span>
                                <i class="bi bi-cart-plus btn btn-secondary px-3 fs-5"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <hr>
                {{/each}}
            </div>

        </div>

        <!-- cart summary -->
        <div class="col-md-5 col-lg-4 mb-5 px-4">
            <h1 class="h3 mb-3">Summary</h1>
            <hr>
            <div class="row">
                <div class="col-6">
                    <span class="text-uppercase">Subtotal</span>
                </div>
                <div class="col-6 mb-3">
                    <span> valor</span>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <span class="text-uppercase">Shipping</span>
                </div>
                <div class="col-6 mb-3">
                    <span class="text-end">Free</span>
                </div>

            </div>
            <div class="row">
                <div class="col-6">
                    <span class="text-uppercase text-start ">Taxes</span>
                </div>
                <div class="col-6 mb-3">
                    <span class="text-end">$13</span>
                </div>
            </div>
            <hr>
            <div class="row fs-5">
                <div class="col-6">
                    <span class="text-uppercase text-start ">Total</span>
                </div>
                <div class="col-6">
                    <span class="text-end">$soma</span>
                </div>
            </div>
        </div>

        <!-- cart buttons -->
        <div class="mb-5">
            <a href="/cart/shipping" class="btn btn-secondary">Next</a>
            <a href="/" class="btn btn-outline-secondary">Cancel</a>
        </div>

    </div>

</section>