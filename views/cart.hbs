<section class="container">
    <!-- cart menu -->
    <div class="p-3 mb-5">
        <ul class="nav justify-content-center">
            <li class="nav-item menu-cart">
                <a class="nav-link text-secondary" href="/cart">Shopping cart</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-secondary" href="/cart/checkout">Checkout</a>
            </li>
        </ul>
    </div>

    <div class="row">
        <!-- cart products -->
        <div class="col-md-7 col-lg-8 mb-5">
            <h1 class="h3 mb-3">Shopping cart</h1>
            <hr>
            <div class="mt-3">
                {{#each products}}
                <div class="card mb-4 card-cart" style="max-width: 540px;">
                    <div class="row g-0">
                        <div class="d-md-none col-md-4 text-center">
                            <a href="/products/product?id={{this.id}}" class="text-decoration-none link-secondary">
                                <img src="/images/product.jpg" class="img-fluid w-50" alt="product image"></a>
                        </div>
                        <div class="d-none d-md-block col-md-4">
                            <a href="/products/product?id={{this.id}}" class="text-decoration-none link-secondary">
                                <img src="/images/product.jpg" class="img-fluid" alt="product image"></a>
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <p class="card-title fw-bold"> <a href="/products/product?id={{this.id}}"
                                        class="text-decoration-none link-dark"> {{this.name}}</a></p>
                                <p class="card-title"> {{this.brand.name}}</p>
                                <p class="card-text">{{this.price}}</p>

                                <div class="row">
                                    <div class="col">
                                        <form action="/cart?_method=PUT" method="POST">
                                            <input type="hidden" name="decrease" value="decrease">
                                            <input type="hidden" name="quantity" value="{{this.quantity}}">
                                            <input type="hidden" name="product_id" value="{{this.id}}">
                                            <button type="submit" class="btn btn-secondary px-4">
                                                <i class="bi bi-cart-dash fs-5"></i></button>
                                        </form>
                                    </div>
                                    <div class="col p-0">
                                        <input type="text" class="form-control px-4 fw-bold  fs-5 text-center"
                                            value="{{this.quantity}}" readonly="readonly">
                                    </div>
                                    <div class="col">
                                        <form action="/cart?_method=PUT" method="POST">
                                            <input type="hidden" name="increase" value="increase">
                                            <input type="hidden" name="product_id" value="{{this.id}}">
                                            <button type="submit" class="btn btn-secondary px-4">
                                                <i class="bi bi-cart-plus fs-5"></i></button>
                                        </form>
                                    </div>
                                    <div class="col">
                                        <form action="/cart?_method=DELETE" method="POST">
                                            <input type="hidden" name="product_id" value="{{this.id}}">
                                            <button type="submit" id="remove" class="btn btn-outline-danger">
                                                <i class="bi bi-trash fs-5"></i></button>
                                        </form>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
                <hr>
                {{/each}}
            </div>

        </div>

        <!-- cart summary -->
        <div class="col-md-5 col-lg-4 mb-5 px-4">
            <h1 class="h3 mb-3">Summary</h1>
            <hr>
            <div>
                <div class="row">
                    <div class="col-6">
                        <span class="text-uppercase">Subtotal</span>
                    </div>
                    <div class="col-6 mb-3">
                        <span>{{#if subtotal}} {{subtotal}} {{/if}}</span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <span class="text-uppercase">Taxes</span>
                    </div>
                    <div class="col-6 mb-3">
                        <span>{{#if taxes}} {{taxes}} {{/if}}</span>
                    </div>
                </div>
                <hr>
                <div class="row fs-5">
                    <div class="col-6">
                        <span class="text-uppercase">Total</span>
                    </div>
                    <div class="col-6">
                        <span>{{#if total}} {{total}} {{/if}}</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- cart buttons -->
        <div class="mb-5">
            <a href="/cart/checkout" class="btn btn-secondary px-5">Checkout</a>
            <a href="/products/category?id=1" class="btn btn-outline-secondary px-4">Keep shopping</a>
        </div>

    </div>

</section>