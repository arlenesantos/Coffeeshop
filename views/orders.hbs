<section class="py-5">
    <div class="container mx-auto">
        <h1 class="h3 mb-3">Latest orders</h1>
        <hr>
        {{#each order}}
        <div class="row m-3">
            <div class="col border-bottom">
                <span># {{this.id}}</span>
            </div>
            <div class="col border-bottom">
                <span>{{this.date}}</span>
            </div>
            <div class="col border-bottom">
                <span class="fw-bold">$ {{this.total}}</span>
            </div>
            <div class="col-2">
                <i class="bi bi-bag-plus btn btn-secondary" onclick="toggle({{this.id}})"></i>
            </div>
        </div>
        <div id="purchase-{{this.id}}" class="row m-3 d-none">
            <div class="col-11 col-lg-10 table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Product</th>
                            <th scope="col">Price</th>
                            <th scope="col" class="text-center">Quantity</th>
                            <th scope="col" class="text-end">Subtotal</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each this.productList }}
                        <tr>
                            <td>{{this.name}} - {{this.brand}}</td>
                            <td>{{this.price}}</td>
                            <td class="text-center">{{this.quantity}}</td>
                            <td class="text-end">{{this.subtotal}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="3">Taxes</td>
                            <td class="text-end">{{this.taxes}}</td>
                        </tr>
                        <tr>
                            <td colspan="3">Shipping</td>
                            <td class="text-end">{{this.shipping}}</td>
                        </tr>
                        <tr class=" table-light">
                            <th colspan="3">Total</th>
                            <td class="text-end fw-bold">{{this.total}}</td>
                        </tr>

                    </tfoot>
                </table>
            </div>

        </div>
        {{/each}}

    </div>
</section>

<script>
    const toggle = (id) => {
        let purchase = document.getElementById(`purchase-${id}`);
        purchase.classList.toggle("d-block");
        purchase.classList.toggle("d-none");

    }
</script>